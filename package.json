{
    "name": "enketo-transformer",
    "version": "2.1.7",
    "description": "Library/app that transforms ODK-compliant XForms into a format that Enketo can consume",
    "license": "Apache-2.0",
    "type": "module",
    "types": "./dist/src/node.d.ts",
    "exports": {
        ".": {
            "import": "./dist/transformer.js",
            "require": "./dist/node.cjs"
        },
        "./web": {
            "default": "./dist/transformer.js",
            "import": "./dist/transformer.js",
            "types": "./dist/src/transformer.d.ts"
        }
    },
    "typesVersions": {
        "*": {
            "web": [
                "./dist/src/transformer.d.ts"
            ]
        }
    },
    "bugs": {
        "url": "https://github.com/enketo/enketo-transformer/issues",
        "email": "martijn@enketo.org"
    },
    "author": {
        "name": "Martijn van de Rijdt",
        "email": "martijn@enketo.org",
        "url": "https://www.linkedin.com/in/martijnvanderijdt"
    },
    "engines": {
        "node": ">=14 <17",
        "npm": ">=6 <7"
    },
    "contributors": [],
    "scripts": {
        "build": "NODE_ENV='production' npm run tsc && vite build && vite build --config ./vite.web.ts --emptyOutDir false && vite build --config ./vite.app.ts --emptyOutDir false && NODE_ENV='lib' vite build --config ./vite.web.ts --emptyOutDir false && npm run typedefs",
        "prepublishOnly": "npm run build",
        "benchmarks": "vite-node ./test/node/benchmarks.ts",
        "start": "vite --config ./vite.app.ts & http-server test/forms -p 8081",
        "eslint-check": "eslint src/**/*.ts vite.config.ts test/**/*.ts",
        "eslint-fix": "eslint src/**/*.ts vite.config.ts test/**/*.ts --fix",
        "prettier-fix": "prettier --write .",
        "test": "wtr && vitest run && npm run prettier-fix && npm run eslint-fix && npm run tsc && node update-readme-with-shield-badge.cjs",
        "test:server": "vitest run",
        "test:server:watch": "vitest",
        "test:web": "vite-node ./tools/wtr.ts --config ./web-test-runner.vite-node.ts",
        "test:web:watch": "wtr --watch",
        "develop": "DEBUG=api,transformer,markdown,language node ./app.js",
        "tsc": "tsc --project ./tsconfig.json && tsc --project ./test/tsconfig.json",
        "typedefs": "tsc --project ./tsconfig.typedefs.json"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/enketo/enketo-transformer.git"
    },
    "keywords": [
        "Enketo",
        "ODK",
        "OpenRosa",
        "XSLT",
        "XSL",
        "Transformer"
    ],
    "dependencies": {
        "body-parser": "^1.20.1",
        "express": "^4.18.2",
        "language-tags": "1.0.5",
        "playwright": "^1.29.1",
        "prettier": "^2.8.1",
        "string-direction": "0.1.x",
        "undici": "^5.13.0",
        "vite": "^4.0.3",
        "vite-node": "^0.27.2",
        "vite-plugin-node": "^1.0.0",
        "xpath-to-css": "^1.1.0"
    },
    "peerDependencies": {
        "libxmljs": "0.19.10",
        "node1-libxmljsmt-myh": "1.0.4"
    },
    "peerDependenciesMeta": {
        "node1-libxmljsmt-myh": {
            "optional": true
        },
        "libxmljs": {
            "optional": true
        }
    },
    "devDependencies": {
        "@actions/core": "^1.10.0",
        "@esm-bundle/chai": "^4.3.4-fix.0",
        "@prettier/plugin-xml": "^2.2.0",
        "@types/css.escape": "^1.5.0",
        "@types/express": "^4.17.14",
        "@types/node": "^18.11.17",
        "@types/prettier": "^2.7.2",
        "@typescript-eslint/eslint-plugin": "^5.47.0",
        "@typescript-eslint/parser": "^5.47.0",
        "@vitest/coverage-istanbul": "^0.26.2",
        "@web/test-runner": "^0.15.0",
        "@web/test-runner-playwright": "^0.9.0",
        "chai": "^4.3.7",
        "chai-as-promised": "^7.1.1",
        "docdash": "^1.2.0",
        "eslint": "^7.32.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-chai-friendly": "^0.7.2",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsdoc": "^36.1.1",
        "eslint-plugin-jsx-a11y": "^6.6.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.31.11",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-unicorn": "^36.0.0",
        "eslint-plugin-vitest": "0.0.21",
        "grunt": "^1.5.3",
        "http-server": "^13.1.0",
        "istanbul-reporter-shield-badge": "^1.2.1",
        "libxmljs": "0.19.10",
        "linkedom": "^0.14.21",
        "markdown-eslint-parser": "^1.2.1",
        "pretty-format": "^29.3.1",
        "rimraf": "^3.0.2",
        "typescript": "^4.9.4",
        "vite-plugin-istanbul": "^4.0.0",
        "vitest": "^0.26.2"
    },
    "volta": {
        "node": "16.5.0",
        "npm": "6.14.13"
    }
}
