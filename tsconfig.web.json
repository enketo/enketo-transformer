{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": true,
        "lib": ["DOM", "DOM.Iterable"],
        "noEmit": false,
        "outDir": "./dist/enketo-transformer/web",
        "paths": {
            "enketo-transformer/dom": ["src/dom/web/index.ts"]
        }
    },
    "exclude": [
        "dist",
