{
    "env": {
        "es6": true,
        "browser": false,
        "node": true
    },
    "globals": {
        "Promise": true
    },
    "extends": ["airbnb", "prettier"],
    "plugins": ["chai-friendly", "jsdoc", "prettier", "unicorn"],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2019
    },
    "settings": {
        "jsdoc": {
            "tagNamePreference": {
                "returns": "return"
            }
        }
    },
    "rules": {
        "prettier/prettier": "error",

        "guard-for-in": "warn",
        "import/extensions": "warn",
        "import/order": "warn",
        "no-param-reassign": "warn",
        "no-restricted-syntax": [
            "warn",
            "ForInStatement",
            "LabeledStatement",
            "WithStatement"
        ],
        "no-shadow": "warn",
        "no-underscore-dangle": "warn",
        "no-use-before-define": [
            "warn",
            {
                "functions": false
            }
        ],
        "prefer-destructuring": "warn"
    },
    "overrides": [
        {
            "files": ["./.github/**/*.md", "./*.md"],
            "parser": "markdown-eslint-parser",
            "rules": {
                "prettier/prettier": ["error", { "parser": "markdown" }]
            }
        },

        {
            "files": ["./test/**/*.js"],
            "env": {
                "mocha": true
            }
        }
    ]
}
